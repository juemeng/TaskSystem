<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/tip/tip-yellow.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/default.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.poshytip.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-impromptu.4.0.js")" type="text/javascript"></script>
    @RenderSection("scriptadd",false)
</head>

<body>
    <div id="wrapper">
	    <div id="bg1">
		    <div id="bg2">
			    <div id="header">
				    <div id="logo">
					    <h1><span class="color2">@ViewBag.Message</span></h1>
				    </div>
			    </div>
			    <div id="page">
                    <div id="content">
                       @RenderBody()
                    </div>
				    <div style="clear: both;">&nbsp;</div>
				    <div id="footer">
					    <p>(c) 2012 TaskSys.com. Design by <a href="#">Moto.</p>
				    </div>
			    </div>
		    </div>
	    </div>
    </div>
</body>
</html>